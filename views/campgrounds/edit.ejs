<% layout('/layouts/lay1') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/camps/<%= camps._id %>?_method=put" method="post"  novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="title"
                    value="<%=camps.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="location"
                        value="<%=camps.location %>" required>
                
                    <div class="valid-feedback">
                    Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="image"
                        value="<%=camps.image %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->
                

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="price" value="<%=camps.price %>" required>
                    
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="description" required><%= camps.description%></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Add images</label>
                        <input type="file" class="form-control" id="image" name="image" multiple>   
                    </div>    
                
            
                <div class="mb-3">
                    <% camps.images.forEach(function(img,i) {   %>
                        <div class="form-check-inline">
                            <input class="d-inline" type="checkbox" id="image-<%=i%>" name="deleteImages[]"value="<%=img.filename%>">
                            <label  class="d-inline" for="image-<%=i%>">Delete?
                            <img src="<%=img.thumbnail %>" class='img-thumbnail mb-3' alt="">
                        </label>
                    </div>

                        <% }) %>
                </div>
                
                
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/camps/<%= camps._id%>">Back To Campground</a>
    
        </div>
    </div>